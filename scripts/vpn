alias vpn_status="curl ipinfo.io/ip"
alias unovpn="sudo ~/bashrc/kill_vpn"
alias ovpn='sudo openvpn --daemon --cd /home/$USER/bashrc/secure/windscribe/ --config Windscribe-US-West.ovpn && sleep 2 && vpn_status'

